<Window x:Class="Planz.DatePickerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/wpf/2008/toolkit"
    Title="" Height="250" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <toolkit:Calendar x:Name="cal" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="ok" IsDefault="True" Content="OK" FontSize="15" Width="60" Margin="0, 10, 5, 0" Click="OK_Click" />
                <Button Name="cancel" IsCancel="True" Content="Cancel" FontSize="15" Width="60" Margin="0, 10, 5, 0" Click="Cancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
